<%= provide(:title, 'Edit Address') %>

<h1 class="title">Edit Address Form</h1>

<%= render partial: 'shared/form_errors', object: @address, as: 'obj' %>

<%= form_for [@user, @address] do |f| %>
  <div class='field'>
    <%= f.label :street_1, class: 'label' %>
    <div class='control'>
      <%= f.text_field :street_1, class: 'input', placeholder: 'Street' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :street_2, class: 'label' %>
    <div class='control'>
      <%= f.text_field :street_2, class: 'input', placeholder: 'Street' %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-half">
      <div class='field'>
        <%= f.label :city, class: 'label' %>
        <div class='control'>
          <%= f.text_field :city, class: 'input', placeholder: 'City' %>
        </div>
      </div>
    </div>
    <div class="column">
      <div class='field'>
        <%= f.label :state, class: 'label' %>
        <div class='control'>
          <%= f.text_field :state, class: 'input', placeholder: 'State' %>
        </div>
      </div>
    </div>
    <div class="column is-one-third">
      <div class='field'>
        <%= f.label :zip_code, class: 'label' %>
        <div class='control'>
          <%= f.text_field :zip_code, class: 'input', placeholder: 'Zip Code' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit 'Update Address', class: 'button is-info' %>
    </div>
  </div>
<% end %>
  