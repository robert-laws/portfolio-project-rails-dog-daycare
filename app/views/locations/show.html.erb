<%= render 'shared/flash' %>

<h1 class="title">Location Details</h1>

<div class='columns'>
  <div class='column'>
    <article class='box'>
      <p class="title is-4"><%= @location.name %></p>
      <p><strong>City:</strong> <%= @location.city %></p>
      <p><strong>Capacity:</strong> <%= @location.capacity %></p>
      <p><strong>Size:</strong> <%= @location.size %></p>
      <p><strong>Size:</strong> <%= @location.open_year %></p>
      <hr>
      <p class="title is-6">Activities available at <%= @location.name %></p>
      <% @location.activities.each do |activity| %>
        <p><%= link_to activity.name, location_activity_path(@location, activity) %></p>
      <% end %>
      <hr>
      <p><%= link_to 'Edit Location', edit_location_path(@location) %></p>
      <p><%= link_to 'Delete Location', @location, method: :delete, data: { confirm: "Are you sure?" } %></p>
    </article>
  </div>
</div>