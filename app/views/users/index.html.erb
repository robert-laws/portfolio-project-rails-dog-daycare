<%= provide(:title, 'Users') %>

<h1 class="title">All Users</h1>

<%= render partial: 'user_type' %>

<h1 class="subtitle"><%= pluralize(@users.size, "User") %></h1>

<div class="columns is-multiline wrapping">
  <% @users.each do |user| %>
    <div class="column is-one-third">
      <div class="box">
        <p class="title is-4"><%= user.first_name %> <%= user.last_name %></p>
        <p><strong>Username:</strong> <%= user.username %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <hr>
        <p><%= link_to 'Edit User Account', edit_user_path(user) %></p>
      </div>
    </div>
  <% end %>
</div>