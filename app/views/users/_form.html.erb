<%= form_for @user do |f| %>
  <div class='field'>
    <%= f.label :username, class: 'label' %>
    <div class='control'>
      <%= f.text_field :username, class: 'input', placeholder: 'Username' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :password, class: 'label' %>
    <div class='control'>
      <%= f.password_field :password, class: 'input', placeholder: 'Password' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :experience, class: 'label' %>
    <div class='control'>
      <%= f.number_field :experience, class: 'input', placeholder: 'Experience in Years' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :credits, class: 'label' %>
    <div class='control'>
      <%= f.number_field :credits, class: 'input', placeholder: 'Credits in Whole Numbers' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <label class="checkbox">
        <%= f.check_box :admin %>
        Check is this is an admin account
      </label>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit submit_text, class: 'button is-info' %>
    </div>
  </div>  
<% end %>