<%= form_for @user do |f| %>
  <div class='field'>
    <%= f.label :username, class: 'label' %>
    <div class='control'>
      <%= f.text_field :username, class: 'input', placeholder: 'Username' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :password, class: 'label' %>
    <div class='control'>
      <%= f.password_field :password, class: 'input', placeholder: 'Password' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :email, class: 'label' %>
    <div class='control'>
      <%= f.text_field :email, class: 'input', placeholder: 'Email' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :first_name, class: 'label' %>
    <div class='control'>
      <%= f.text_field :first_name, class: 'input', placeholder: 'First Name' %>
    </div>
  </div>

  <div class='field'>
    <%= f.label :last_name, class: 'label' %>
    <div class='control'>
      <%= f.text_field :last_name, class: 'input', placeholder: 'Last Name' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <label class="checkbox">
        <%= f.check_box :admin %>
        Check is this is an admin account
      </label>
    </div>
  </div>

  <%= f.fields_for(:addresses) do |address_fields| %>
    <h5 class="title is-5">User Address</h5>
    <%= address_fields.hidden_field :id %>

    <div class='field'>
      <%= address_fields.label :street_1, class: 'label' %>
      <div class='control'>
        <%= address_fields.text_field :street_1, class: 'input', placeholder: 'Street' %>
      </div>
    </div>

    <div class='field'>
      <%= address_fields.label :street_2, class: 'label' %>
      <div class='control'>
        <%= address_fields.text_field :street_2, class: 'input', placeholder: 'Street' %>
      </div>
    </div>

    <div class='field'>
      <%= address_fields.label :city, class: 'label' %>
      <div class='control'>
        <%= address_fields.text_field :city, class: 'input', placeholder: 'City' %>
      </div>
    </div>

    <div class='field'>
      <%= address_fields.label :state, class: 'label' %>
      <div class='control'>
        <%= address_fields.text_field :state, class: 'input', placeholder: 'State' %>
      </div>
    </div>

    <div class='field'>
      <%= address_fields.label :zip_code, class: 'label' %>
      <div class='control'>
        <%= address_fields.text_field :zip_code, class: 'input', placeholder: 'Zip Code' %>
      </div>
    </div>
  <% end %>

  <h5 class="title is-5">Dog Information</h5>
  <%= f.fields_for(:dogs) do |dog_fields| %>
    <h5 class="title is-5">Dog # <%= dog_fields.index + 1 %></h5>
    <%= dog_fields.hidden_field :id %>

    <div class='field'>
      <%= dog_fields.label :name, class: 'label' %>
      <div class='control'>
        <%= dog_fields.text_field :name, class: 'input', placeholder: 'Name' %>
      </div>
    </div>

    <div class='field'>
      <%= dog_fields.label :breed, class: 'label' %>
      <div class='control'>
        <%= dog_fields.text_field :breed, class: 'input', placeholder: 'Breed' %>
      </div>
    </div>

    <div class='field'>
      <%= dog_fields.label :age, class: 'label' %>
      <div class='control'>
        <%= dog_fields.number_field :age, class: 'input', placeholder: 'Age' %>
      </div>
    </div>

    <div class='field'>
      <%= dog_fields.label :sex, class: 'label' %>
      <div class='select'>
        <%= dog_fields.select :sex, [['male', 'male'], ['female', 'female']], { include_blank: 'select a sex' } %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <div class="control">
      <%= f.submit submit_text, class: 'button is-info' %>
    </div>
  </div>  
<% end %>